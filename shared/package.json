    "prebuild": "npm run clean",
    "build": "tsc",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^23.3.2",
    "@types/web3": "^1.2.2",
    "jest": "^23.6.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^23.10.2",
    "tslint": "^5.11.0",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "bn.js": "^5.1.1",
    "web3": "^1.2.7"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$",
    "moduleFileExtensions": [
