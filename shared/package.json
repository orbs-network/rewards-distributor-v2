{
  "name": "rewards-v2",
  "version": "0.1.0",
  "description": "Wrapper project for shared code",
  "scripts": {
    "typecheck": "tsc --noEmit --skipLibCheck",
    "lint": "eslint . --ext .js,.ts,.tsx -f codeframe",
    "clean": "rimraf ./dist/",
    "prebuild": "npm run clean",
    "build": "tsc",
    "pretest": "npm run typecheck && npm run lint",
    "test": "jest",
    "test:e2e": "jest --config ./e2e/jest.json --forceExit",
    "prettify": "npx prettier \"src/**/*.ts\" --write && npx prettier \"e2e/**/*.ts\" --write",
    "start-ganache": "mkdir -p _out && ganache-cli -p 7545 -i 5777 -a 1000 --gasLimit 0x7FFFFFFF --gasPrice 1 -m  \"vanish junk genuine web seminar cook absurd royal ability series taste method identify elevator liquid\" > _out/ganache.log & echo $! > _out/local-ganache.pid",
    "stop-ganache": "pkill -P `cat _out/local-ganache.pid`"
  },
  "devDependencies": {
    "@types/jest": "^24.9.1",
    "@types/lodash": "^4.14.150",
    "@types/web3": "^1.2.2",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "ganache-cli": "^6.9.1",
    "jest": "^26.0.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.0.0",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "@orbs-network/orbs-ethereum-contracts-v2": "0.0.4",
    "bignumber.js": "^9.0.0",
    "bn.js": "^5.1.1",
    "lodash": "^4.17.15",
    "p-limit": "^2.3.0",
    "web3": "1.2.6",
    "web3-eth-contract": "1.2.6"
  },
  "jest": {
    "rootDir": "src",
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  }
}
